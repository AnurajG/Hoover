<android.support.v7.widget.CardView
      xmlns:card_view="http://schemas.android.com/apk/res-auto"
      xmlns:android="http://schemas.android.com/apk/res/android"
      android:id="@+id/card_view"
      android:layout_height="200dp"
      android:layout_width="200dp"
      android:layout_margin="5dp"
      android:gravity="center"
      card_view:cardCornerRadius="4dp"
      >

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent">

     <TextView
        android:id="@+id/hoov_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="23dp"
        android:layout_marginStart="23dp"
        android:layout_marginTop="10dp"
        android:text=""
        android:textColor="@color/primary_text"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/hoov_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/hoov_text"
        android:layout_alignStart="@+id/hoov_text"
        android:layout_below="@+id/hoov_text"
        android:text="kuchb"
        android:textColor="@color/primary_text" />

    <Button
        android:id="@+id/hoov_up_button"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/up"
        android:textColor="#925FAE" />
   
    <TextView
        android:id="@+id/hoov_up_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/hoov_up_button"
        android:text="20"
        android:textColor="@color/primary_text" />

     <TextView
        android:id="@+id/hoov_comment_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/hoov_comment_button"
        android:text="20"
        android:textColor="@color/primary_text" />

    <Button
        android:id="@+id/hoov_comment_button"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="24dp"
        android:layout_toLeftOf="@+id/hoov_up_button"
        android:background="@drawable/comment" />
   
</RelativeLayout>
</android.support.v7.widget.CardView>

